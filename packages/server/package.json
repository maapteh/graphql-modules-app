{
  "name": "graphql-server",
  "version": "0.0.4",
  "description": "Our awesome Apollo server",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "maapteh/graphql-modules-app/packages/graphql-server"
  },
  "pre-commit": "lint-staged",
  "license": "MIT",
  "engines": {
    "node": ">= 10.16.3"
  },
  "scripts": {
    "prepare": "yarn generate:graphqlcodegen && yarn inspector:validate && yarn build",
    "precommit": "lint-staged",
    "audit": "yarn audit",
    "dev": "NODE_ENV=development ts-node-dev --respawn --transpileOnly ./src/index.ts",
    "dev:monitoring": "yarn build && pm2-runtime dist/index.js",
    "dev:debug": "ts-node-dev --inspect --debug-brk ./src/index.ts",
    "test": "jest --config=jest.config.js",
    "test:coverage": "yarn test --verbose --coverage",
    "build": "yarn generate:graphqlcodegen && tsc && yarn copy:schema",
    "start": "node --optimize_for_size --max_old_space_size=920 --gc_interval=100 dist/index.js",
    "build:failover": "yarn copy:schema && echo \"Skip because of broken package for now\" && exit 0",
    "start:failover": "ts-node src/index.ts",
    "lint:prettier": "prettier \"src/**/*.ts\"",
    "lint": "tslint -c \"./tslint.json\" -p tsconfig.json \"src/**/*.ts\" -e \"**/_generated-types.ts\"",
    "--- graphql inspector --------": "Inspector",
    "inspector:similar": "graphql-inspector similar ./src/_schema.graphql",
    "inspector:diff": "graphql-inspector diff git:origin/master:packages/server/src/_schema.graphql ./src/_schema.graphql",
    "---- graphql autogen ---------": "Graphql codegen",
    "generate:graphqlcodegen": "gql-gen",
    "copy:schema": "cd src && find . -name '*.graphql' | xargs tar cvf - | (cd ../dist ; tar xfp -)"
  },
  "dependencies": {
    "@graphql-modules/core": "0.7.12",
    "@graphql-modules/epoxy": "0.4.0",
    "@graphql-modules/sonar": "0.4.0",
    "@types/dotenv": "6.1.1",
    "@types/express": "4.17.1",
    "@types/jest": "24.0.18",
    "@types/node": "12.7.5",
    "@types/node-fetch": "2.5.0",
    "apollo-server": "2.9.3",
    "apollo-server-express": "2.9.3",
    "compression": "1.7.4",
    "core-js": "3.2.1",
    "dataloader": "1.4.0",
    "dotenv": "8.1.0",
    "express": "4.17.1",
    "graphql": "14.5.4",
    "graphql-depth-limit": "1.1.0",
    "graphql-tag": "2.10.1",
    "graphql-tag-pluck": "0.8.4",
    "node-fetch": "2.6.0",
    "reflect-metadata": "0.1.13",
    "ts-node": "8.3.0",
    "tslint-config-airbnb": "5.11.1",
    "typescript": "3.6.3"
  },
  "devDependencies": {
    "@babel/core": "7.6.0",
    "@graphql-codegen/add": "^1.7.0",
    "@graphql-codegen/cli": "^1.7.0",
    "@graphql-codegen/schema-ast": "1.7.0",
    "@graphql-codegen/time": "^1.7.0",
    "@graphql-codegen/typescript-resolvers": "1.7.0",
    "@graphql-inspector/cli": "1.24.0",
    "@types/graphql-depth-limit": "1.1.2",
    "apollo-server-testing": "2.9.3",
    "babel-jest": "24.9.0",
    "jest": "24.9.0",
    "jest-cli": "24.9.0",
    "lint-staged": "9.2.5",
    "pm2": "3.5.1",
    "prettier": "1.18.2",
    "ts-jest": "24.0.2",
    "ts-node-dev": "1.0.0-pre.42",
    "tslint": "5.20.0",
    "tslint-config-prettier": "1.18.0"
  }
}
