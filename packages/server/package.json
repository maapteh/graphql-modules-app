{
  "name": "@sample/server",
  "version": "0.0.4",
  "description": "Our awesome Apollo server",
  "main": "index.ts",
  "repository": {
    "type": "git",
    "url": "maapteh/graphql-modules-app/packages/graphql-server"
  },
  "pre-commit": "lint-staged",
  "license": "MIT",
  "engines": {
    "node": ">= 10.16.x",
    "yarn": ">= 1.16.0"
  },
  "scripts": {
    "prepare": "yarn build",
    "precommit": "lint-staged",
    "audit": "yarn audit",
    "dev": "NODE_ENV=development ts-node-dev --respawn --inspect=7001 --transpileOnly ./src/index.ts",
    "dev:monitoring": "yarn build && pm2-runtime dist/index.js",
    "dev:debug": "ts-node-dev --inspect --debug-brk ./src/index.ts",
    "test": "jest --config=jest.config.js",
    "test:coverage": "yarn test --verbose --coverage",
    "build": "yarn generate:graphqlcodegen && tsc -v && tsc && yarn copy:schema",
    "start": "node --optimize_for_size --max_old_space_size=920 --gc_interval=100 dist/src/index.js",
    "buildFIXED": "echo \"skipping build\" && exit 0",
    "startFIXED": "NODE_ENV=development ts-node-dev --respawn --transpileOnly ./src/index.ts",
    "build:failover": "yarn copy:schema && echo \"Skip because of broken package for now\" && exit 0",
    "start:failover": "ts-node src/index.ts",
    "clean": "rm -rf 'dist'",
    "lint:prettier": "prettier \"src/**/*.ts\"",
    "lint": "tslint -c \"./tslint.json\" -p tsconfig.json \"./src/**/*.ts\" -e \"**/_generated-types.ts\"",
    "start:clinic": "tsc && yarn copy:schema && clinic doctor -- node dist/src/index.js",
    "--- graphql inspector --------": "Inspector",
    "inspector:similar": "graphql-inspector similar ./src/_schema.graphql",
    "inspector:diff": "graphql-inspector diff git:origin/master:packages/server/src/_schema.graphql ./src/_schema.graphql",
    "---- graphql autogen ---------": "Graphql codegen",
    "generate:graphqlcodegen": "graphql-codegen",
    "copy:schema": "cd src && find . -name '*.graphql' | xargs tar cvf - | (cd ../dist/src ; tar xfp -)"
  },
  "dependencies": {
    "@graphql-modules/core": "0.7.13",
    "@types/express": "4.17.2",
    "@types/jest": "24.0.23",
    "@types/node": "12.12.17",
    "@types/node-fetch": "2.5.4",
    "apollo-server": "2.9.13",
    "apollo-server-express": "2.9.13",
    "compression": "1.7.4",
    "core-js": "3.4.0",
    "dataloader": "1.4.0",
    "dotenv": "8.2.0",
    "express": "4.17.1",
    "graphql": "14.5.8",
    "graphql-depth-limit": "1.1.0",
    "graphql-tag": "2.10.1",
    "graphql-tag-pluck": "0.8.7",
    "graphql-toolkit": "0.7.4",
    "graphql-voyager": "1.0.0-rc.28",
    "node-fetch": "2.6.0",
    "reflect-metadata": "0.1.13",
    "ts-node": "8.5.4",
    "ts-node-dev": "1.0.0-pre.44",
    "typescript": "3.7.3"
  },
  "resolutions": {
    "graphql-toolkit": "0.5.16",
    "graphql": "14.5.8"
  },
  "devDependencies": {
    "@babel/core": "7.7.5",
    "@graphql-codegen/add": "1.9.1",
    "@graphql-codegen/cli": "1.9.1",
    "@graphql-codegen/schema-ast": "1.9.1",
    "@graphql-codegen/time": "1.9.1",
    "@graphql-codegen/typescript-resolvers": "1.9.1",
    "@graphql-inspector/cli": "1.26.0",
    "@types/graphql-depth-limit": "1.1.2",
    "apollo-server-testing": "2.9.13",
    "babel-jest": "24.9.0",
    "clinic": "5.0.0",
    "jest": "24.9.0",
    "jest-cli": "24.9.0",
    "lint-staged": "9.5.0",
    "pm2": "4.2.1",
    "prettier": "1.19.1",
    "ts-jest": "24.2.0",
    "tslint": "5.20.1",
    "tslint-config-airbnb": "5.11.2",
    "tslint-config-prettier": "1.18.0"
  }
}
