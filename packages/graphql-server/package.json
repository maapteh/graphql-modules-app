{
  "name": "graphql",
  "description": "Our awesome Apollo server",
  "version": "0.0.1",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "maapteh/graphql-modules-app"
  },
  "pre-commit": "lint-staged",
  "license": "MIT",
  "engines": {
    "node": ">= 10.13.0"
  },
  "scripts": {
    "prepare": "yarn run build",
    "precommit": "lint-staged",
    "clean": "rm -rf coverage/* && rm -rf dist/*",
    "dev": "gql-gen -w && NODE_ENV=development nodemon -e ts -x ts-node ./src/index.ts",
    "dev:monitoring": "yarn build && pm2-runtime dist/index.js",
    "dev:debug": "nodemon --exec ts-node --inspect --debug-brk src/index.ts",
    "test": "jest --config=jest.config.js",
    "test:coverage": "jest --config=jest.config.js --verbose --coverage",
    "build": "yarn generate-types && tsc && yarn copy:schema",
    "start": "node dist/index.js",
    "prettier": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -c \"../../config/tslint.json\" -p tsconfig.json \"src/**/*.ts\" -e \"**/_generated-types.ts\"",
    "------------------": "COPY AND AUTO GENERATE STUFF",
    "copy:schema": "cd src && find . -name '*.graphql' | xargs tar cvf - | (cd ../dist ; tar xfp -)",
    "generate-types": "gql-gen"
  },
  "dependencies": {
    "@graphql-modules/core": "0.2.16",
    "@graphql-modules/epoxy": "0.2.16",
    "@graphql-modules/sonar": "0.2.16",
    "@types/dotenv": "6.1.0",
    "@types/express": "4.16.0",
    "@types/node-fetch": "2.1.4",
    "apollo-engine": "1.1.2",
    "apollo-server": "2.2.5",
    "apollo-server-express": "2.2.5",
    "dotenv": "6.1.0",
    "express": "4.16.4",
    "graphql": "14.0.2",
    "graphql-depth-limit": "1.1.0",
    "graphql-tag": "2.10.0",
    "node-fetch": "2.3.0",
    "reflect-metadata": "0.1.12",
    "ts-node": "7.0.1",
    "tslint-config-airbnb": "5.11.1",
    "typescript": "3.2.1"
  },
  "lint-staged": {
    "gitDir": "../",
    "linters": {
      "**/*.{ts,tsx}": [
        "prettier --write",
        "tslint --fix",
        "git add"
      ]
    }
  },
  "devDependencies": {
    "@babel/core": "7.2.0",
    "@types/graphql": "14.0.3",
    "@types/graphql-depth-limit": "1.1.0",
    "@types/jest": "23.3.10",
    "babel-jest": "23.6.0",
    "graphql-code-generator": "0.14.5",
    "graphql-codegen-add": "0.14.5",
    "graphql-codegen-time": "0.14.5",
    "graphql-codegen-typescript-template": "0.14.1",
    "jest": "23.6.0",
    "jest-cli": "23.6.0",
    "nodemon": "1.18.7",
    "pm2": "3.2.2",
    "prettier": "1.15.3",
    "ts-jest": "23.10.5",
    "tslint": "5.11.0",
    "tslint-config-prettier": "1.17.0"
  }
}
