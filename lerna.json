{
    "lerna": "0.0.4",
    "npmClient": "yarn",
    "useWorkspaces": true,
    "packages": ["packages/*"],
    "version": "independent",
    "hoist": false,
    "command": {
        "publish": {
            "ignoreChanges": ["ignored-file", "*.md"],
            "message": "chore(release): publish"
        },
        "bootstrap": {
            "ignore": "component-*",
            "npmClientArgs": ["--no-package-lock"]
        }
    }
}
